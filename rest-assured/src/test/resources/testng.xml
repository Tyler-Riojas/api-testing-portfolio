<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="REST API Test Suite" verbose="1" parallel="classes" thread-count="2">

    <listeners>
        <listener class-name="reporting.ExtentTestListener"/>
    </listeners>

    <!-- All API Tests -->
    <test name="Booking API Tests">
        <classes>
            <class name="tests.BookingApiTest"/>
        </classes>
    </test>

    <test name="Schema Validation Tests">
        <classes>
            <class name="tests.SchemaValidationTest"/>
        </classes>
    </test>

</suite>
