    {
      "name": "Get Booking by ID",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has firstname\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.firstname).to.be.a('string');",
              "});",
              "",
              "pm.test(\"Response has totalprice\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.totalprice).to.be.a('number');",
              "});",
              "",
              "pm.test(\"Booking dates exist\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.bookingdates.checkin).to.exist;",
              "    pm.expect(jsonData.bookingdates.checkout).to.exist;",
              "});"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        },
