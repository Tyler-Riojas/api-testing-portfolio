      "name": "Create Booking",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Booking ID is returned\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.bookingid).to.be.a('number');",
              "});",
              "",
              "pm.test(\"Firstname matches\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.booking.firstname).to.eql(\"Tyler\");",
              "});",
              "",
              "pm.test(\"Total price matches\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.booking.totalprice).to.eql(500);",
              "});",
              "",
              "pm.test(\"Deposit paid is true\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.booking.depositpaid).to.be.true;",
              "});"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
